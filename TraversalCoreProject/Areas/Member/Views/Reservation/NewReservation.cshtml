@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yeni Rezervasyon Sayfası</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Web sitemiz Traversal üzerinden yer alan lokasyonlar içerinde yenş rezervasyonlarınızı aşağıdaki panelden yapabilirsiniz</p>
                    <form method="post">
                        <div class="form-group">
                            @Html.Label("Lokasyon")
                            @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Kişi Sayısı")
                            <input type="text" asp-for="PersonCount" class=" form-control" />
                        </div>
                        @* <div class="form-group">
                        @Html.Label("Tarih")
                        <input type="date" asp-for="ReservationDate" class=" form-control" />
                        </div>*@
                        <div class="form-group">
                            @Html.Label("Tarih")
                            <input type="text" id="reservationDate" name="ReservationDate" class="form-control" />
                        </div>
                        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
                        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
                        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
                        <script>
                            $(function () {

                                $("#reservationDate").datepicker();
                            });
                        </script>
                        @*  <div class="form-group">
                        @Html.Label("Eklemek İstedikleriniz ")
                        <input type="text" asp-for="Description" class=" form-control" />
                        </div>*@
                        <div class="form-group">
                            @Html.Label("Eklemek İstedikleriniz ")
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>
                        <button class=" btn btn-success">Rezervasyon Yap</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    window.onload = (function () 
    {
        alert('Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır.Rezervasyon onaylanma süreci için "Aktif Rezervasyon" menüsünden takip ediniz.');
    });</script>